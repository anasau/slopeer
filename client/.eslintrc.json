{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        // "react",
        "@typescript-eslint",
        "preact"
    ],
    "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "react/prop-types": 0,
        "indent": ["error", 2],
        "keyword-spacing": "error",
        "linebreak-style": ["error", "unix"],
        "quotes": ["error","single"],
        "semi": ["error", "always"],
        "space-before-blocks": "error",
        "space-before-function-paren": "error"
    }
}